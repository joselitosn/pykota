import sys
import os
import time

OIDS = ["hrPrinterDetectedErrorState", "hrPrinterStatus", "hrDeviceStatus"]
SNMPCOMMAND = "snmpget -v1 -c public -Ov %(printer)s HOST-RESOURCES-MIB::%(oid)s.1" 

def main() :
    if len(sys.argv) != 2 :
        sys.stderr.write("usage : snmpprinterstatus yourprinter.example.com\n")
    else :    
        printer = sys.argv[1]
        while 1 :
            try :
                for oid in OIDS :    
                    command = SNMPCOMMAND % locals()
                    output = os.popen(command)
                    result = output.read().strip()
                    status = output.close()
                    print oid, "===>", result
            except KeyboardInterrupt :        
                break
            time.sleep(0.5)

if __name__ == "__main__" :
    sys.exit(main())

